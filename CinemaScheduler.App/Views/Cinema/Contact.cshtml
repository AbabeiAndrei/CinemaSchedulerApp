@model IEnumerable<CinemaScheduler.App.Entities.Cinema>
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact</h2>

<div class="contacts">
    @foreach (var cinema in Model)
    {
        <div class="contact-item">
            <h4>@cinema.Name</h4>
            <p><a href="mail:@cinema.Email">@cinema.Email</a></p>
            <p><a href="tel:@cinema.Phone">@cinema.Phone</a></p>
            <p>@cinema.City.Name</p>
        </div>
    }
</div>
