@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<form asp-action="Login" method="post">
    <h2 class="title">Login</h2>
    <div class="form-group" pf-validation-for="Username" pf-validationerror-class="has-error">
        <label asp-for="Username">Username</label>
        <input type="text" class="form-control" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group" pf-validation-for="Password" pf-validationerror-class="has-error">
        <label asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    @Html.ValidationSummary(true)
    <div class="form-group row">
        <div class="col-md-6">
            <input type="checkbox" asp-for="RememberMe" />
            <label>
                Remember me
            </label>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary submit-btn">Submit</button>
        </div>
    </div>
</form>

