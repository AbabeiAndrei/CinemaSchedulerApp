@using CinemaScheduler.App.Entities
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-action="Index" asp-controller="Cinema" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li>
            <a asp-action="Logout" asp-controller="Account" class="btn btn-link navbar-btn navbar-link">Logout</a>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>*@
        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}